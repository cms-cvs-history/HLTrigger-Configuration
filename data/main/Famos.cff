//
// from CMSSW/FastSimulation/Configuration/test/IntegrationTest.cfg
//

// Famos
include "FastSimulation/Configuration/data/FamosSequences.cff"
replace famosSimHits.SimulatePileUp = true

// Parametrized magnetic field
replace VolumeBasedMagneticFieldESProducer.useParametrizedTrackerField = true

# Tracker MisAlignement 
include "FastSimulation/Configuration/data/MisAlignment.cff" 
# ECAL miscalibration. 
include "FastSimulation/Configuration/data/MisCalibration.cff"

//
// Make sure this "HLT path" does not accept any event:
module  hltFamosPrescaler = hltPrescaler from "HLTrigger/HLTcore/data/hltPrescaler.cfi"
replace hltFamosPrescaler.prescaleFactor = 4294967295 // = 2**32-1

path HLTFamos = { hltBegin & famosWithEverything & hltFamosPrescaler}
