module pdBJetFilter = hltHighLevel  from "HLTrigger/HLTfilters/data/hltHighLevel.cfi"
replace pdBJetFilter.HLTPaths = {
      "HLTB2JetMu",
      "HLTB3JetMu",
      "HLTB4JetMu",
      "HLTBHTMu",
      "HLTXMuonBJet",
      "HLTXMuonBJetSoftMuon",
      "HLTB1Jet",
      "HLTB2Jet",
      "HLTB3Jet",
      "HLTB4Jet",
      "HLTBHT",
      "HLTXElectronBJet"
