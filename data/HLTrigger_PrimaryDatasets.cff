endpath ePDTau          = {PDTau}
endpath ePDPhoton       = {PDPhoton}
endpath ePDMuon         = {PDMuon}
endpath ePDElectron     = {PDElectron}
endpath ePDBJet         = {PDBJet}
endpath ePDJetMET       = {PDJetMET}

